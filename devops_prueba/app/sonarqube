pipeline {
    agent {
        docker {
            image 'python:3.5.1'
            args '-v /var/jenkins_home/workspace:/var/jenkins_home/workspace'
        }
    }

    environment {
        SONARQUBE_SCANNER_HOME = tool 'SonarQubeScanner'
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'pip install pytest'
            }
        }
        
        stage('Unit Tests') {
            steps {
                script {
                    sh '''
                        cd devops_prueba
                        pytest --junitxml=../test-reports/results.xml
                    '''
                }
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    sh '''
                        cd devops_prueba
                        ${SONARQUBE_SCANNER_HOME}/bin/sonar-scanner \
                            -Dsonar.projectKey=tu_proyecto_key \
                            -Dsonar.sources=app \
                            -Dsonar.host.url=http://tu_servidor_sonarqube \
                            -Dsonar.login=tu_token_sonarqube
                    '''
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'test-reports/results.xml', allowEmptyArchive: true
        }
    }
}
