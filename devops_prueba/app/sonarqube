pipeline {
    agent any

    environment {
        SONARQUBE_URL = 'http://your-sonarqube-url' // URL del servidor SonarQube
        SONARQUBE_TOKEN = 'your-sonarqube-token' // Token de autenticaci√≥n para SonarQube
    }

    stages {
        stage('Setup Python Environment') {
            steps {
                script {
                    // Crear un entorno virtual
                    sh 'python3 -m venv venv'
                    // Activar el entorno virtual y actualizar pip
                    sh './venv/bin/pip install --upgrade pip'
                    // Instalar pytest y Flask en el entorno virtual
                    sh './venv/bin/pip install pytest flask'
                }
            }
        }

        stage('Unit Tests') {
            steps {
                script {
                    // Ejecutar pruebas unitarias dentro del entorno virtual
                    sh './venv/bin/pytest devops_prueba/app/test.py --junitxml=report.xml'
                }
            }
        }

        stage('SonarQube Code Analysis') {
            environment {
                scannerHome = tool 'SonarQubeScanner' // Nombre del SonarQube Scanner configurado
            }
            steps {
                dir("${WORKSPACE}") {
                    script {
                        withSonarQubeEnv('SonarQubeScanner') { // Nombre del servidor SonarQube configurado
                            sh """
                            ${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=your_project_key \
                            -Dsonar.projectName=your_project_name \
                            -Dsonar.projectVersion=1.0-SNAPSHOT \
                            -Dsonar.sources=devops_prueba/app \
                            -Dsonar.sourceEncoding=UTF-8 \
                            -Dsonar.login=${SONARQUBE_TOKEN}
                            """
                        }
                    }
                }
            }
        }

        stage('SonarQube Quality Gate Check') {
            steps {
                script {
                    timeout(time: 1, unit: 'HOURS') {
                        def taskId = sh(script: "curl -u ${SONARQUBE_TOKEN}: ${SONARQUBE_URL}/api/ce/task?id=your_project_key", returnStdout: true).trim()
                        echo "SonarQube Task ID: ${taskId}"
                        def qualityGateStatus = ""
                        
                        while (qualityGateStatus != 'OK' && qualityGateStatus != 'ERROR') {
                            sleep 10
                            def statusResponse = sh(script: "curl -u ${SONARQUBE_TOKEN}: ${SONARQUBE_URL}/api/ce/task?id=${taskId}", returnStdout: true).trim()
                            def jsonResponse = readJSON text: statusResponse
                            qualityGateStatus = jsonResponse.task.status
                            echo "Current Quality Gate Status: ${qualityGateStatus}"
                        }
                        
                        if (qualityGateStatus != 'OK') {
                            error "Quality Gate failed with status: ${qualityGateStatus}"
                        } else {
                            echo "Quality Gate passed with status: ${qualityGateStatus}"
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            junit 'report.xml' // Publicar resultados de las pruebas unitarias
        }
    }
}
